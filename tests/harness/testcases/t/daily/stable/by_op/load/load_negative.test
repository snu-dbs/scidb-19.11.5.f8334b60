# See ticket 1772 for detals: https://trac.scidb.net/ticket/1772
#
# A list of negative tests for the .csv and .tsv loaders.
--setup
--test
--start-query-logging

CREATE ARRAY loadTest < attr_one : string not null, attr_two : int64 > [i=0:*,5,0]
CREATE ARRAY loadOverlaps  < attr_one : string not null, attr_two : int64 > [i=0:*,5,1]

#
#  Checks for .csv file format
#

# Check that a '?' symbol with no associated value is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_001.csv',-2, 'csv')"

# Check that a '?' symbol with a value > 256 is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_002.csv',-2, 'csv')"

# Check that a '?' symbol with a value < 0 is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_003.csv',-2, 'csv')"

# Check that a '?' symbol with a string following is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_004.csv',-2, 'csv')"

# Formerly checked that a valid missing code is rejected when applied
# to a not nullable column, but since SDB-6149 that is perfectly OK,
# at least for STRING NOT NULL.
--stop-query-logging
load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_005.csv',-2, 'csv')
scan(loadTest)  -- Inserted by scan_doctor
--start-query-logging

# Check that a load missing a column is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_006.csv',-2, 'csv')"

# Check that a load with a malformed type is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_007.csv',-2, 'csv')"

# Cannot load CSV into a schema with overlaps.
--error --hideQueryString --code=scidb::SCIDB_SE_INFER_SCHEMA::SCIDB_LE_OP_INPUT_NO_OVERLAP \
    "load(loadOverlaps,'${TEST_DATA_DIR}/negative_tests_input_007.csv',-2, 'csv')"

#
#  Equivalent checks for .tsv file format (which uses a different parser)
#

# Check that a '?' symbol with no associated value is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_001.tsv',-2, 'tsv')"

# Check that a '?' symbol with a value > 256 is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_002.tsv',-2, 'tsv')"

# Check that a '?' symbol with a value < 0 is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_003.tsv',-2, 'tsv')"

# Check that a '?' symbol with a string following is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_004.tsv',-2, 'tsv')"

# Cannot load TSV into a schema with overlaps.
--error --hideQueryString --code=scidb::SCIDB_SE_INFER_SCHEMA::SCIDB_LE_OP_INPUT_NO_OVERLAP \
    "load(loadOverlaps,'${TEST_DATA_DIR}/negative_tests_input_004.tsv',-2, 'tsv')"

# Formerly checked that a valid missing code was rejected whan applied
# to a not nullable column, but since SDB-6149 that is perfectly OK,
# at least for STRING NOT NULL.
--stop-query-logging
load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_005.tsv',-2, 'tsv')
scan(loadTest)  -- Inserted by scan_doctor
--start-query-logging

# Check that a load missing a column is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_006.tsv',-2, 'tsv')"

# Check that a load with a malformed type is rejected
--error --hideQueryString --code=scidb::SCIDB_SE_IMPORT_ERROR::SCIDB_LE_FILE_IMPORT_FAILED \
    "load(loadTest,'${TEST_DATA_DIR}/negative_tests_input_007.csv',-2, 'csv')"

--stop-query-logging

--cleanup
remove(loadTest)
remove(loadOverlaps)
